// Follow the airbnb style guide
{
    "env": {
        "browser": true
    },

    "extends": ["airbnb", "airbnb/hooks"],
    "rules": {
        "no-console": "warn",
        "react/jsx-props-no-spreading": "off",
        "react/jsx-indent": ["error", 2],
        "react/react-in-jsx-scope": "off",
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "no-alert": "warn",
        "no-unused-vars": ["warn"]
    }
}
